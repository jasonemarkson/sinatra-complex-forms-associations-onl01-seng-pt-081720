<h1>Update Pet</h1>
<form method="POST" action="/pets/<%= @pet.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name: </label>
<input type="text" id="pet_name">
<br>
<label>Owner: </label>
<% @owners.each do |owner| %>
    <input type="checkbox" name="owner[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input><br>
  <% end %>
<input type="checkbox" name="owner[name]" id="owner_name">
<br>
<input type="submit" value="Update Pet">
</form>

